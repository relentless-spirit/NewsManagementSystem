@model BusinessObject.Entities.Category

<form id="createForm" asp-controller="Category" asp-action="Create" method="post" onsubmit="event.preventDefault(); submitCreateForm();">
    <div class="form-group mb-2">
        <label asp-for="CategoryName" class="form-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="CategoryDesciption" class="form-label"></label>
        <textarea asp-for="CategoryDesciption" class="form-control"></textarea>
        <span asp-validation-for="CategoryDesciption" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
