
@model BusinessObject.Entities.NewsArticle


@{
    ViewData["Title"] = "Delete Article";
}

<h2>Delete Article</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <strong>@Model.NewsTitle</strong><br />
    @Model.Headline
</div>

<form asp-action="Delete" asp-route-id="@Model.NewsArticleID" method="post">
    <p>Are you sure you want to delete the article titled: <strong>@Model.NewsTitle</strong>?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ListArticles" asp-controller="Article" class="btn btn-secondary">Cancel</a>
</form>
