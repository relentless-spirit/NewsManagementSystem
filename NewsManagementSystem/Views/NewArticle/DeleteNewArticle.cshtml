@model NewsManagementSystem.DAL.Entities.NewsArticle

@{
    ViewData["Title"] = "Delete Article";
}

<h2>Delete Article</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <strong>@Model.NewsTitle</strong><br />
    @Model.Headline
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="NewsArticleID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ListArticles" class="btn btn-secondary">Cancel</a>
</form>